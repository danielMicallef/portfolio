---
import Layout from '../layouts/Layout.astro';
import { t } from '../utils/i18n';

const lang = Astro.currentLocale || 'en';
const pageTitle = "Services | " + t('site.title', lang);
const pageDescription = "Professional web development, SaaS development, and business automation services. Fixed pricing, transparent communication, and expert execution.";

const services = [
  {
    title: "Web Development",
    subtitle: "Landing & Content Pages",
    description: "Professional websites designed to grow your business and attract customers.",
    price: "€2,300",
    priceDetail: "Up to 5 pages",
    extraPrice: "€450/extra page",
    features: [
      "Lightning-fast websites",
      "SEO optimized for Google",
      "AI optimized - let LLMs find you",
      "Mobile responsive design",
      "Post-launch support included",
      "Designed specifically for you",
      "Clear pricing, no hidden fees"
    ],
    icon: "globe",
    cta: "Get Your Website"
  },
  {
    title: "SaaS Development",
    subtitle: "Build Your Product",
    description: "Full-stack applications tailored to your business needs, from concept to launch.",
    price: "From €8,000",
    priceDetail: "Project-based pricing",
    extraPrice: null,
    features: [
      "Initial meetings to agree on deliverables",
      "Weekly progress updates",
      "Direct contact throughout",
      "Modern tech stack",
      "Scalable architecture",
      "User-friendly interface",
      "Testing & documentation"
    ],
    icon: "code",
    cta: "Start Your Project"
  },
  {
    title: "Business Automation",
    subtitle: "Process Review & Optimization",
    description: "Identify opportunities to automate workflows and improve efficiency in your business.",
    price: "€500",
    priceDetail: "Consultation fee",
    extraPrice: "Only charged if we can help",
    features: [
      "Comprehensive process review",
      "Automation recommendations",
      "ROI analysis",
      "Implementation roadmap",
      "Technology suggestions",
      "No charge if we can't help",
      "Risk-free consultation"
    ],
    icon: "automation",
    cta: "Book Consultation"
  }
];

const stats = [
  { value: "10+", label: "Years of Experience" },
  { value: "20", label: "Projects Delivered" },
  { value: "1:1", label: "Personal Care" }
];
---

<Layout title={pageTitle} description={pageDescription} lang={lang}>
  <!-- Hero Section -->
  <section class="py-16 md:py-24 bg-gradient-to-br from-neutral-bg to-white dark:from-neutral-dark dark:to-neutral-dark/95">
    <div class="max-w-container mx-auto px-6">
      <div class="text-center max-w-3xl mx-auto">
        <h1 class="font-heading text-h1 text-secondary dark:text-white mb-6" data-aos="fade-up">
          Professional Web Services
        </h1>
        <p class="text-xl text-secondary/80 dark:text-white/80 mb-8" data-aos="fade-up" data-aos-delay="100">
          From landing pages to full-stack applications and business automation.
          Clear pricing, transparent communication, expert execution.
        </p>

        <!-- Stats -->
        <div class="grid grid-cols-3 gap-8 mt-12" data-aos="fade-up" data-aos-delay="200">
          {stats.map((stat, index) => (
            <div class="text-center">
              <div class="font-heading text-4xl md:text-5xl text-primary dark:text-primary-light mb-2">
                {stat.value}
              </div>
              <div class="text-sm text-secondary/70 dark:text-white/70">
                {stat.label}
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="py-16 md:py-24">
    <div class="max-w-container mx-auto px-6">
      <div class="grid md:grid-cols-3 gap-8">
        {services.map((service, index) => (
          <div
            class="bg-white dark:bg-neutral-dark p-8 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300 flex flex-col"
            data-aos="fade-up"
            data-aos-delay={index * 100}
          >
            <!-- Icon -->
            <div class="w-16 h-16 bg-primary/10 dark:bg-primary/20 rounded-lg flex items-center justify-center mb-6">
              {service.icon === 'globe' && (
                <svg class="w-8 h-8 text-primary dark:text-primary-light" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              )}
              {service.icon === 'code' && (
                <svg class="w-8 h-8 text-primary dark:text-primary-light" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
                </svg>
              )}
              {service.icon === 'automation' && (
                <svg class="w-8 h-8 text-primary dark:text-primary-light" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path>
                </svg>
              )}
            </div>

            <!-- Content -->
            <div class="flex-grow">
              <h3 class="font-heading text-2xl text-secondary dark:text-white mb-2">
                {service.title}
              </h3>
              <p class="text-sm text-primary dark:text-primary-light mb-4">
                {service.subtitle}
              </p>
              <p class="text-secondary/80 dark:text-white/80 mb-6">
                {service.description}
              </p>

              <!-- Pricing -->
              <div class="mb-6 pb-6 border-b border-secondary/10 dark:border-white/10">
                <div class="font-heading text-3xl text-secondary dark:text-white mb-1">
                  {service.price}
                </div>
                <div class="text-sm text-secondary/60 dark:text-white/60">
                  {service.priceDetail}
                </div>
                {service.extraPrice && (
                  <div class="text-sm text-secondary/60 dark:text-white/60 mt-1">
                    {service.extraPrice}
                  </div>
                )}
              </div>

              <!-- Features -->
              <ul class="space-y-3 mb-8">
                {service.features.map(feature => (
                  <li class="flex items-start text-sm text-secondary/80 dark:text-white/80">
                    <svg class="w-5 h-5 text-primary dark:text-primary-light mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>
            </div>

            <!-- CTA -->
            <a
              href={`/contact/?service=${encodeURIComponent(service.title === 'Web Development' ? 'Web Development' : service.title === 'SaaS Development' ? 'Product Development' : 'Business Automation')}`}
              class="block w-full text-center bg-primary dark:bg-primary hover:bg-primary/90 dark:hover:bg-primary-light text-white font-medium py-3 px-6 rounded-lg transition-colors duration-300"
            >
              {service.cta}
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Pricing Philosophy Section -->
  <section class="py-16 md:py-24 bg-neutral-bg dark:bg-neutral-dark/50">
    <div class="max-w-4xl mx-auto px-6">
      <h2 class="font-heading text-h2 text-secondary dark:text-white text-center mb-12" data-aos="fade-up">
        Transparent Pricing
      </h2>

      <div class="grid md:grid-cols-3 gap-8 mb-12">
        <div class="text-center" data-aos="fade-up" data-aos-delay="0">
          <div class="w-16 h-16 bg-primary/10 dark:bg-primary/20 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-primary dark:text-primary-light" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="font-heading text-xl text-secondary dark:text-white mb-2">Fixed Pricing</h3>
          <p class="text-secondary/70 dark:text-white/70 text-sm">
            Know exactly what you'll pay upfront. No surprises.
          </p>
        </div>

        <div class="text-center" data-aos="fade-up" data-aos-delay="100">
          <div class="w-16 h-16 bg-primary/10 dark:bg-primary/20 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-primary dark:text-primary-light" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="font-heading text-xl text-secondary dark:text-white mb-2">Transparent</h3>
          <p class="text-secondary/70 dark:text-white/70 text-sm">
            Clear breakdown of what's included in your project.
          </p>
        </div>

        <div class="text-center" data-aos="fade-up" data-aos-delay="200">
          <div class="w-16 h-16 bg-primary/10 dark:bg-primary/20 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-primary dark:text-primary-light" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
          </div>
          <h3 class="font-heading text-xl text-secondary dark:text-white mb-2">Flexible Add-Ons</h3>
          <p class="text-secondary/70 dark:text-white/70 text-sm">
            Need more features? Get advice and clear pricing.
          </p>
        </div>
      </div>

      <div class="bg-white dark:bg-neutral-dark p-8 rounded-lg shadow-lg text-center" data-aos="fade-up">
        <h3 class="font-heading text-2xl text-secondary dark:text-white mb-4">
          Hosting Available
        </h3>
        <p class="text-secondary/80 dark:text-white/80 mb-4">
          We also offer reliable hosting services if you need them. Fast, secure, and maintained by experts.
        </p>
        <p class="text-sm text-secondary/60 dark:text-white/60">
          Ask about hosting options when you contact us
        </p>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 md:py-24">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <h2 class="font-heading text-h2 text-secondary dark:text-white mb-6" data-aos="fade-up">
        Ready to Get Started?
      </h2>
      <p class="text-xl text-secondary/80 dark:text-white/80 mb-8" data-aos="fade-up" data-aos-delay="100">
        Let's discuss your project and find the perfect solution for your needs.
      </p>
      <a
        href="/#contact/"
        class="inline-flex items-center gap-2 bg-primary dark:bg-primary hover:bg-primary/90 dark:hover:bg-primary-light text-white font-medium py-4 px-8 rounded-lg transition-all duration-300 hover:scale-105 hover:shadow-lg"
        data-aos="fade-up"
        data-aos-delay="200"
      >
        <span>Get in Touch</span>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
      </a>
    </div>
  </section>
</Layout>